# Set resolution and refresh rate
xrandr --output DVI-D-0 --mode 1440x900 --rate 75 --primary

xset r rate 300 50 &                 # Speed keyboard repeat rate up
setxkbmap -option caps:escape        # Remap caps to escape
sxhkd &                              # Launch the simple x hotkey daemon
wal -R &                             # Restore the wallpaper and color scheme
[ ! -s ~/.config/mpd/pid ] && mpd &  # Run the music player daemon
dunst &                              # Launch the dunst notification daemon
syncthing &                          # Launch syncthing
