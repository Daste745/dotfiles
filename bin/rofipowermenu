#!/bin/sh

actions="Poweroff\n
         Suspend\n
         Reboot"

askaction() { \
  chosen=$(echo -e $actions \
         | sed "s/ //g" \
         | rofi -width 20 -dmenu -i -p "Power menu")
  echo $chosen
  }

case $(askaction) in
  Poweroff) poweroff ;;
  Suspend) systemctl suspend ;;
  Reboot) reboot ;;
esac
