# Applications

super + Return
  $TERMINAL

super + w
  $BROWSER

super + d
  discord

super + e
  thunar

# dmenu_run -i -b -fn "NotoSansMono Nerd Font:style=Regular:size=11"
super + r
  j4-dmenu-desktop --no-generic --dmenu="dmenu -i -b -fn 'NotoSansMono Nerd Font:style=Regular:size=11'" --term="$TERMINAL"

super + {_, shift +} t
  $TERMINAL -e {gotop, htop}

super + backslash
  $TERMINAL -e pulsemixer

super + shift + x
  betterlockscreen -l dimblur

super + Print
  screenshot-full

super + alt + Print
  screenshot-window

{Print, shift + alt + s}
  screenshot-snippet

# Media and volume

super + {comma, period, slash}
  playerctl -p spotify {previous, next, play-pause}

super + {_, shift +, alt +} {minus, equal}
  pulseaudio-ctl {down 5, \
                  down 10, \
                  mute, \
                  up 5, \
                  up 10, \
                  set 100}

